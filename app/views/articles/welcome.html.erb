<section class="hero is-small is-dark">
  <div class="hero-body">
    <p class="title px-6">
      <%= @articles[0]['pages'][0]['displaytitle'] %>
    </p>
    <p class="subtitle px-6 has-text-justified">
      <%= @articles[0]['text'] %>
    </p>
  </div>
</section>

<section class="section">
    <div class="container mx-6 px-6">
      <div class="columns">
        <% if @articles[0]['pages'][0]['originalimage'] %>
            <div class="column is-3 has-text-centered">
                <%= image_tag @articles[0]['pages'][0]['originalimage']['source'], style: "max-height:200px; max-width:200px;" %><br>
                <p class="is-size-7 has-text-centered is-italic"> <%= @articles[0]['pages'][0]['description'] %> </p>
            </div>
        <% end %>
        <div class="column">
            <% @articles[0]['pages'].each do | body | %>
                <%= body['extract_html'].html_safe %><br>
            <% end %>
        </div>
      </div>
    </div>
  </section>

