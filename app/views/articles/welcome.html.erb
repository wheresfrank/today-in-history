<% @item = rand(0...@articles.length) %>

<section class="hero is-dark">
  <div class="hero-body">
    <p class="title px-6">
      <%= @articles[@item]['pages'][0]['displaytitle'].html_safe %>
    </p>
    <p class="subtitle px-6 has-text-justified">
      <%= @articles[@item]['text'].html_safe %>
    </p>
  </div>
</section>

<section class="section">
    <div class="container mx-6 px-6">
      <div class="columns">
        <div class="column has-text-centered is-3">
          <% @articles[@item]['pages'].each do | body | %>
            <% if body['originalimage'] %>
              <%= image_tag body['originalimage']['source'], style: "width:250px;" %> <br>
              <p class="is-size-7  is-italic"> <%= body['description'] %> </p>
            <%end %>
          <% end %>
        </div>
        <div class="column">
            <% @articles[@item]['pages'].each do | body | %>
                <%= body['extract_html'].html_safe %><br>
            <% end %>
        </div>
      </div>
        <%= link_to "Load next random event from today's date in history", "/", class: "button is-medium is-fullwidth" %>
    </div>
  </section> 
